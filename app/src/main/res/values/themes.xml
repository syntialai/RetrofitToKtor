<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MovieCatalogue" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_300</item>
        <item name="colorSecondaryVariant">@color/red_800</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Other color. -->
        <item name="colorSurface">@color/black_blue_900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/black_blue_900</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Component color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorTextMedium">@color/white_87</item>
        <item name="colorTextLow">@color/white_60</item>

        <!-- Text appearance. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MovieCatalogue.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MovieCatalogue.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MovieCatalogue.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MovieCatalogue.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MovieCatalogue.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MovieCatalogue.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MovieCatalogue.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MovieCatalogue.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MovieCatalogue.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MovieCatalogue.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MovieCatalogue.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MovieCatalogue.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MovieCatalogue.Overline</item>

        <!-- Component styles. -->
        <item name="collapsingToolbarLayoutStyle">@style/Widget.MaterialComponents.Toolbar.Surface
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.MovieCatalogue.LargeComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MovieCatalogue.MediumComponent
        </item>
        <item name="ratingBarStyle">@style/Widget.MovieCatalogue.RatingBar</item>
        <item name="toolbarStyle">@style/Widget.MovieCatalogue.Toolbar</item>
    </style>
</resources>